{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [2, {
      "devDependencies": ["**/*Spec.js", "**/settings.js", "gulpfile.babel.js"]
    }],
    "chai-friendly/no-unused-expressions": 2,
    "react/prop-types": [0],
    "react/jsx-filename-extension": [0],
    "no-unused-expressions": 0,
    "quotes": [2, "single"],
    "padded-blocks": [0],
    "eol-last": [0],
    "no-underscore-dangle": [0],
    "max-len": [0],
    "no-unused-vars": [0],
    "class-methods-use-this": [0],
    "no-console": [0],
    "comma-dangle": [2, "never"],
    "no-param-reassign": [2, {
      "props": false
    }],
    "new-cap": [2, {
      "newIsCapExceptions": ["target"],
      "capIsNewExceptions": ["Router", "Controller", "Get", "Post"]
    }],
    "indent": [2, 2, {
      "FunctionDeclaration": { "parameters": "first" },
      "CallExpression": { "arguments": "first" },
      "MemberExpression": "off",
      "ImportDeclaration": "first",
      "SwitchCase": 1
    }]
  }
}